# Configuration pnpm pour VoisiLab Front-End

# Mode hoisted : node_modules plat (requis pour Next.js standalone + Windows)
node-linker=hoisted

# Nécessaire pour Next.js standalone (résolution des modules)
shamefully-hoist=true

# Équivalent de legacy-peer-deps pour pnpm
strict-peer-dependencies=false
auto-install-peers=true

# Ignore les warnings de sécurité inutiles
audit=false

# Niveau de log
loglevel=warn
