# ============================================
# VoisiLab Backend - Variables d'environnement
# ============================================

# Base de données PostgreSQL
DATABASE_HOST=postgres
DATABASE_PORT=5432
DATABASE_NAME=voisilab_db
DATABASE_USER=voisilab_user
DATABASE_PASSWORD=votre_mot_de_passe_securise

# URL de connexion complète
DATABASE_URL=postgresql://voisilab_user:votre_mot_de_passe_securise@postgres:5432/voisilab_db

# JWT Configuration
JWT_SECRET=votre_secret_jwt_super_securise_a_changer_en_production
JWT_EXPIRES_IN=7d

# Serveur Backend
PORT=5000
NODE_ENV=development

# URLs Frontend & Admin
FRONTEND_URL=http://localhost:3000
ADMIN_URL=http://localhost:3001

# Upload de fichiers
MAX_FILE_SIZE=10485760
UPLOAD_DIR=uploads
