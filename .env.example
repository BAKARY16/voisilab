# ===========================================
# VARIABLES D'ENVIRONNEMENT - VOISILAB
# ===========================================
# Copier ce fichier en .env et remplir les valeurs

# ===========================================
# BACKEND API (MySQL + Express)
# ===========================================

# Base de donn√©es MySQL
DATABASE_HOST=mysql
DATABASE_PORT=3306
DATABASE_NAME=voisilab_db
DATABASE_USER=voisilab_user
DATABASE_PASSWORD=changez_moi_en_production
DATABASE_ROOT_PASSWORD=root_password

# JWT Authentication
JWT_SECRET=changez_moi_secret_jwt_super_securise_en_production
JWT_EXPIRES_IN=7d

# Serveur Backend
BACKEND_PORT=5000
NODE_ENV=development

# ===========================================
# FRONT-END (Next.js)
# ===========================================

# API Backend
NEXT_PUBLIC_API_URL=http://localhost:5000/api

# EmailJS (optionnel - pour formulaire de contact)
NEXT_PUBLIC_EMAILJS_SERVICE_ID=votre_service_id
NEXT_PUBLIC_EMAILJS_TEMPLATE_ID=votre_template_id
NEXT_PUBLIC_EMAILJS_PUBLIC_KEY=votre_public_key

# URL Admin (pour lien depuis front-end)
NEXT_PUBLIC_ADMIN_URL=http://localhost:3001

# Frontend Port
FRONTEND_PORT=3000

# ===========================================
# ADMIN (Vite + React)
# ===========================================

# API Backend
VITE_API_URL=http://localhost:5000/api

# URLs
VITE_USER_APP_URL=http://localhost:3000

# App Info
VITE_APP_VERSION=v2.0.0
VITE_APP_BASE_NAME=/
VITE_APP_NAME=VoisiLab Admin

# Admin Port
ADMIN_PORT=3001

# ===========================================
# DOCKER & PRODUCTION
# ===========================================

# Environnement
NODE_ENV=production

# URLs pour production
FRONTEND_URL=http://localhost:3000
ADMIN_URL=http://localhost:3001
BACKEND_URL=http://localhost:5000
